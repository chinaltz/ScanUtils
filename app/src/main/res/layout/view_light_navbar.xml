<?xml version="1.0" encoding="utf-8"?><!--头部导航布局-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/nav_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="34px"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/nav_left_icon"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/black_back"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView

            android:id="@+id/nav_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:paddingLeft="10px"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="32px"
            android:visibility="gone" />


    </LinearLayout>


    <TextView
        android:id="@+id/nav_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="22px"
        android:visibility="invisible" />


    <LinearLayout
        android:id="@+id/nav_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="34px"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/nav_right_icon"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/nav_back"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/nav_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:paddingLeft="10px"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="32px"
            android:visibility="gone"
            tools:visibility="visible" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#ECECEC" />
</RelativeLayout>

